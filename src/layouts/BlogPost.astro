---
import { CollectionEntry, getEntries } from "astro:content";
import { Icon } from "astro-icon";
import { Image } from "astro:assets";
import BaseLayout from "./BaseLayout.astro";
import BlogPostAuthorsInfo from "../components/post/BlogPostAuthorsInfo.astro";

type Props = CollectionEntry<"blog">["data"];

const {
  authors,
  date,
  title,
  subtitle,
  description,
  thumbnail,
  tag,
  teaseralt,
  thumbnailSrc,
} = Astro.props;

const authorsData = await getEntries(authors);
---

<BaseLayout>
  <div class="mx-auto w-full max-w-screen-lg p-4 py-12">
    <article class="text-midnight-blue">
      <div>
        <h1 class="text-4xl font-bold">{title}</h1>
        <h2 class="text-xl mt-1">{subtitle}</h2>
        <BlogPostAuthorsInfo authorsData={authorsData} date={date} />
      </div>
      {thumbnail && <Image src={thumbnail} alt={title} class="mt-2 w-full" />}
      {
        thumbnailSrc && (
          <a
            class="text-xs hover:text-bright-teal image-source-link mt-2 mb-8"
            href={thumbnailSrc}
          >
            Image source
          </a>
        )
      }
      <div
        class="prose prose-a:text-bright-teal max-w-full prose-img:w-2/3 prose-img:mx-auto mt-4"
      >
        <slot />
      </div>
    </article>
  </div>
</BaseLayout>
